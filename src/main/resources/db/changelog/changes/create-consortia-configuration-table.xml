<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

  <changeSet id="MODCON-32@@create-tenant-table" author="azizbekxm">

    <createTable tableName="consortia_configuration">
      <column name="id" type="uuid">
        <constraints primaryKey="true" primaryKeyName="pk_consortia_configuration_id"/>
      </column>
      <column name="central_tenant_id" type="text">
        <constraints unique="true" nullable="false"/>
      </column>
    </createTable>
  </changeSet>

</databaseChangeLog>
